import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
	
	Scanner sc = new Scanner (System.in);
	

	int a, b;
	
	a = sc.nextInt();
	b = sc.nextInt();
	
	if (a==1) {
		System.out.println("Total: R$" +(4.00*b));
	}
	else if (a==2) {
		System.out.println("Total: R$" +(4.50*b));
	}
	else if (a==3) {
		System.out.println("Total: R$" +(5.00*b));
	}
	else if (a==4) {
		System.out.println("Total: R$" +(2.00*b));
	}
	else {
		System.out.println("Total: R$" +(1.50*b));
	}
	
	sc.close();
	}
}